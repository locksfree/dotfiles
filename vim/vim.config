set nocompatible        " Improved
set ruler
set number
set autoindent          " always set autoindenting on
set hidden              " Allow to switch to another buffer without writing to file
set autowrite           " Writes on make/shell commands
set autoread            " auto-reload when file changed from the outside
set encoding=utf-8
set nolazyredraw        " Do not redraw uselessly during macro execs
set undodir=~/.vim/tmp  " Persistent undo
set undofile
set backspace=indent,eol,start   " allow backspacing over everything in insert mode
set history=1000
set expandtab
set shiftwidth=3        " Tabs under smart indent
set tabstop=3           " Normal tabs
set smarttab
set cindent
set autoindent
set list                " disable line break
set tw=120              " text width: 120 columns
set nowrap              " wrap lines
" Show a unicode end of line symbol at end of line and trailing space as ~
set lcs=tab:\ \ ,eol:â†µ,trail:~,extends:>,precedes:<
set laststatus=2        " Always show status line.
set title
set scrolloff=3
set backupdir=~/.vim/tmp
set directory=~/.vim/tmp
set pastetoggle=<F2>

" Search
set ignorecase
set smartcase           " search case sensitive only when one of the letter is uppercase
                        " in the search term
set showcmd             " display incomplete commands
set incsearch           " do incremental searching
set hlsearch            " highlight search
set showmatch           " Show matching brackets.

set cf                  " Enable error files & error jumping.
set clipboard+=unnamed  " Yanks go on clipboard instead.
set timeoutlen=250      " Time to wait after ESC (default causes an annoying delay)

" Indenting - see http://vimdoc.sourceforge.net/htmldoc/indent.html#cinoptions-values 
set cinoptions=:0,t0   " Affects how cident indents lines.
set cinwords=if,else,while,do,for,switch,case
set formatoptions=tcqr

" Automatically save and reload views
au BufWritePost,BufLeave,WinLeave ?* mkview
au BufWinEnter ?* silent loadview

" BEGINNING OF VUNDLE CONFIGURATION
" =================================
filetype off
let vundleInstalled = 0
if !filereadable(expand('~/.vim/bundle/Vundle.vim/README.md'))
   echo "Installing Vundle"
   echo ""
   silent !git clone https://github.com/gmarik/Vundle.vim.git ~/.vim/bundle/Vundle.vim
   let vundleInstalled = 1
endif
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'gmarik/Vundle.vim' " required, let vundle self-manage

Plugin 'a.vim'                                  " Quick switch from .c -> .h etc. :A
Plugin 'kien/ctrlp.vim'                         " Ctrl+P
Plugin 'dbext.vim'                              " Database extension ,se
Plugin 'Raimondi/delimitMate'                   " Autocompletion for brackets, parens, etc.
